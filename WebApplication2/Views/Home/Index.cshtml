@model WebApplication2.Services.AutismProfile

@{
    ViewData["Title"] = "Home Page";
}

    <head>

        <link rel="stylesheet" href="~/css/site.css" />

    </head>

    <div class="layout">
        <h1>Autism Test</h1>
        <h4>Fill the form to find out your Autism Status</h4>

        <br>
        <form method="post" action="Home/TestAutism">

            <p>I often notice small sounds when others do not</p>
            <select name="A1">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>
                I usually concentrate more on the whole picture, rather than the small details
            </p>
            <select name="A2">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>I find it easy to do more than one thing at once</p>
            <select name="A3">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>If there is an interruption, I can switch back to what I was doing very quickly</p>
            <select name="A4">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>I find it easy to read between the lines when someone is talking to me</p>
            <select name="A5">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>
                I know how to tell if someone listening to me is getting bored
            </p>
            <select name="A6">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>
                When I’m reading a story I find it difficult to work out the character’s intentions
            </p>
            <select name="A7">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>I like to collect information about categories of things (e.g. types of cars, types of bird, types of train, types of plant, etc)</p>
            <select name="A8">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>
                I find it easy to work out what someone is thinking or feeling just by looking at their face
            </p>
            <select name="A9">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>I find it difficult to work out peoples intentions</p>
            <select name="A10">
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>

            <p>Age</p>
            <input type="number" name="Age" value="" />


            <p>Gender</p>
            <select name="Sex">
                <option value="m">Male</option>
                <option value="f">Female</option>
            </select>

            <p>Ethnicity</p>
            <select name="Ethnicity">
                <option value="white">White</option>
                <option value="middle eastern">Middle Eastern</option>
                <option value="asian">Asian</option>
                <option value="White European">White European</option>
                <option value="black">Black</option>
                <option value="LatiNO">Latino</option>
                <option value="hispanic">Hispanic</option>
            </select>

            <p>Jaundice</p>
            <select name="Jaundice">
                <option value="YES">Yes</option>
                <option value="NO">No</option>
            </select>

            <p>Any Family member with ASD ?</p>
            <select name="Family_ASD">
                <option value="YES">Yes</option>
                <option value="NO">No</option>
            </select>

            <p>Language</p>
            <select name="Language">
                <option value="english">English</option>
                <option value="arabic">Other</option>
            </select>

            <p>Who is doing the test ?</p>
            <select name="User">
                <option value="self">Self</option>
                <option value="parent">Parent</option>
            </select>
            <div class="center"><button type="submit">Test</button></div>
        </form>
    </div>
